#!/usr/bin/env bash
count = 0
until [[ "$?" -ne 0 ]];
do
    count=$(( count + 1 ))
    ./rando.sh $> out.txt
done

echo "found error after $count runs"
cat out.txt
4.find . -type f -name "*.html" | xargs tar -czf archive.tar.gz
